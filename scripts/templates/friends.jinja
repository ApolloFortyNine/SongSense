{% extends "base.jinja" %}
{% block content %}
  <h3 class="center">{{name}}'s 'Friends'</h3>
  <table class="striped centered">
    <thead>
      <tr>
        <th data-field="id">Username</th>
        <th data-field="mods">Number of Matches</th>
      </tr>
    </thead>
    <tbody>
      {% for row in allRows %}
        <tr>
          <td><a href={{row[2]}}>{{row[0]}}</a></td>
          <td>{{row[1]}}</td>
        </tr>
      {% endfor %}
    </tbody>
{% endblock %}
