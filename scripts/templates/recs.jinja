{% extends "base.jinja" %}
{% block content %}
  <h3 class="center">{{name}}'s Recommendations</h3>
  <table class="striped centered">
    <thead>
      <tr>
        <th data-field="id">Beatmap ID</th>
        <th data-field="mods">Mods</th>
        <th data-field="matches">Number of Matches</th>
        <th data-field="pp">Expected PP</th>
      </tr>
    </thead>
    <tbody>
      {% for row in allRows %}
        <tr>
          <td><a href={{row[4]}}>{{row[0]}}</a></td>
          <td>{{row[1]}}</td>
          <td>{{row[2]}}</td>
          <td>{{row[3]}}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
